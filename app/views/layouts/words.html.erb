
<% content_for :header do %>
  <a id='home_link' href='<%= root_path %>'></a>
  
  <form id='search_form' action='<%= search_path %>'> 
    
    <input name='query' type='search' autocomplete='off' autofocus
        value='<%= @query %>' placeholder='<%= t('search_placeholder') %>' />
  </form>

  <a id='menu_link' href='#menu'></a>
<% end %>

<%= render template: 'layouts/application' %>
